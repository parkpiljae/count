<div class= "container" style ="margin-top :40px">
	<h1>게시글 작성</h1>
	<form action="/home/record" method="POST">

	<textarea class="form-control" rows="3" name="content" placeholder="내용"></textarea>
  <button type="submit" class="btn btn-default">작성</button>
</form>

<% @posts.each do |t| %>
	<div class="well">
		<%= t.content%>
	</div> 
	<div align="right">	
		글자 수: <%=t.content.length%> <br>
	    글자 수(공백x): <%=t.content.length - t.content.count(' ')%> <br> 
	    단어 갯 수: <%=t.content.split(' ').length%> <br>
	    <a href="/home/destroy/<%= t.id%>">[삭제]</a> <br>
	    <a href="/home/update_view/<%= t.id%>">[수정]</a><br>
    </div>

<% end %>

</div>	